{
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": ["react", "react-native", "import"],
  "extends": [
    "eslint:recommended",
    "plugin:import/errors",
    "plugin:import/warnings",
    "plugin:react/recommended",
    "plugin:react-native/all"
  ],
  "rules": {
    "class-methods-use-this": "off",
    "keyword-spacing": "error",
    "no-use-before-define":"error",
    "quotes": ["error", "double"]
  },
  "env": {
    "jest": true
  }
}
